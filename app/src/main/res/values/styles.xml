<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarStyle">@style/actionBar</item>
        <item name="android:actionBarStyle">@style/actionBar</item>

        <!-- Setting default Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.NTC.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.NTC.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.NTC.LargeComponent</item>

    </style>
    <style name="actionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>

    <style name="ShapeAppearance.NTC.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="ShapeAppearance.NTC.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">36dp</item>
    </style>

    <style name="ShapeAppearance.NTC.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">36dp</item>
    </style>

    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <style name="ContentTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primaryTextColor</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
</resources>
